<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_client"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".presentation.view.activity.MainActivity"
    android:background="@color/color_1"
    android:clickable="true">

    <include layout="@layout/toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_13"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/font_size_buttons_body"
                android:textColor="@color/color_3"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fab_icon_size"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/font_size_buttons_body"
                android:textColor="@color/color_3"
                android:inputType="textCapWords"
                android:background="@color/azulclaro">
                <requestFocus />
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_17"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/font_size_buttons_body"
                android:textColor="@color/color_3"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_nit_client"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fab_icon_size"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/font_size_buttons_body"
                android:textColor="@color/color_3"
                android:inputType="number"
                android:background="@color/azulclaro"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_16"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/font_size_buttons_body"
                android:textColor="@color/color_3"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_reason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fab_icon_size"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/font_size_buttons_body"
                android:textColor="@color/color_3"
                android:inputType="textCapWords"
                android:background="@color/azulclaro"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_17"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/font_size_buttons_body"
                android:textColor="@color/color_3"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_nit_reason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fab_icon_size"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/font_size_buttons_body"
                android:textColor="@color/color_3"
                android:inputType="number"
                android:background="@color/azulclaro"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_83"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/font_size_buttons_body"
                android:textColor="@color/color_3"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fab_icon_size"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/font_size_buttons_body"
                android:textColor="@color/color_3"
                android:inputType="textEmailAddress"
                android:background="@color/azulclaro"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_19"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/font_size_buttons_body"
                android:textColor="@color/color_3"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fab_icon_size"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/font_size_buttons_body"
                android:textColor="@color/color_3"
                android:inputType="number"
                android:background="@color/azulclaro"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_20"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/font_size_buttons_body"
                android:textColor="@color/color_3"
                android:textStyle="bold" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapview_client"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="@dimen/margin">
            </com.google.android.gms.maps.MapView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>